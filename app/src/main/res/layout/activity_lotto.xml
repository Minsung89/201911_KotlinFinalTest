<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".LottoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번주 당첨 번호"/>
    
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        
        <TextView
            android:id="@+id/lottoNumTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt3"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt4"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt5"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="\?"/>
        <TextView
            android:id="@+id/lottoNumTxt6"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="\?"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내가 매주 구매하는 고정된 번호"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/myLottoNumTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="3"/>

        <TextView
            android:id="@+id/myLottoNumTxt2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="10"/>

        <TextView
            android:id="@+id/myLottoNumTxt3"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="17"/>

        <TextView
            android:id="@+id/myLottoNumTxt4"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="20"/>
        <TextView
            android:id="@+id/myLottoNumTxt5"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="40"/>
        <TextView
            android:id="@+id/myLottoNumTxt6"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="43"/>
    </LinearLayout>

    <Button
        android:id="@+id/buyOneLottoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="로또 한장 구매하기"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/autoLottoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="로또 계속 반복 구매하기"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/usedMoneyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용 금액 : ??원"/>

    <TextView
        android:id="@+id/luckMoneyTxt"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="누적 당첨 금액 : ??원"/>


    <TextView
        android:id="@+id/firstRankCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="1등 횟수 : ?"/>
    <TextView
        android:id="@+id/secondRankCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2등 횟수 : ?"/>
    <TextView
        android:id="@+id/thirdRankCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="3등 횟수 : ?"/>
    <TextView
        android:id="@+id/fourtRankCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="4등 횟수 : ?"/>
    <TextView
        android:id="@+id/fifthRankCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="5등 횟수 : ?"/>

    <TextView
        android:id="@+id/wrongRankCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="꽝! 횟수 : ?"/>

</LinearLayout>